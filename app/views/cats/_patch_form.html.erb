<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<form action="<%= form_action %>" method="post">
  <input type="hidden" name="_method" id="" value="<%= form_method %>">
<p>
  <label for="cat-name">Name</label>
  <input type="text" name="cat[name]" id="cat-name" value="<%= cat.name %>">
</p>
<p>
  <label for="cat-color">Color</label>
  <input type="text" name="cat[color]" id="cat-color" value="<%= cat.color %>" />
</p>
<p>
  <label for="cat-gender">Gender</label>
  <input type="text" name="cat[gender]" id="cat-gender" value="<%= cat.gender %>">
</p>
<p>
  <label for="cat-birth-date">Birth Date</label>
  <input type="text" name="cat[birth_date]" id="cat-birth-date" value="<%= cat.birth_date %>">
</p>
<p>
  <label for="cat-description">Description</label>
</p>
<p>
  <textarea rows = "3" cols = "30" name="cat[description]" id="cat-description"><%=cat.description%></textarea>
</p>
<p>
  <input type="submit" value="<%= submit_text %>">
</p>
</form>
